generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categoria {
  id_categoria String       @id @db.VarChar(50)
  nombre       String       @db.VarChar(50)

  publicaciones publicaciones[]
}

model publicaciones {
  id_publicacion String      @id @db.VarChar(50)
  titulo         String      @db.VarChar(100)
  cuerpo         String      @db.Text
  id_categoria   String      @db.VarChar(50)
  fecha_inicio   DateTime    @db.Date
  fecha_fin      DateTime    @db.Date
  prioridad      String      @db.VarChar(20)
  adjuntos       String      @db.VarChar(100)
  etiquetas      String?     @db.VarChar(50)

  categoria      categoria   @relation(fields: [id_categoria], references: [id_categoria])
  email_logs     email_log[] @relation("HistorialEmail") 
}

model usuario {
  id_usuario    String  @id @default(uuid())
  nombre        String  @db.VarChar(50)
  email         String  @db.VarChar(100) @unique
  rol           String  @db.VarChar(50)
  password_hash String  @db.VarChar(100)
}


model email_log {
  id_email      String      @id @default(uuid())
  id_publicacion String     @db.VarChar(50)
  destinatarios String       @db.Text
  asunto        String       @db.VarChar(150)
  cuerpo        String       @db.Text
  fecha_envio   DateTime     @default(now())
  estado        String       @db.VarChar(20) // "enviado" | "error"
  error_mensaje String?      @db.Text

  publicacion    publicaciones @relation("HistorialEmail", fields: [id_publicacion], references: [id_publicacion])

  @@index([id_publicacion, fecha_envio])
}

model actividad_reciente{
  id_usuario String @id @db.VarChar(50)
  actividad  String @db.Text
  fecha      DateTime @default(now())
}




